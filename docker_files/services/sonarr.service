  sonarr:
    container_name: sonarr
    image: linuxserver/sonarr
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 4096M
        reservations:
          memory: 1024M
    ports:
      - 8989:8989
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=UTC
    volumes:
      - /media-rollout/appdata/sonarr:/config
      - /media-rollout/storage/tv:/tv
      - /media-rollout/storage/downloads:/downloads

