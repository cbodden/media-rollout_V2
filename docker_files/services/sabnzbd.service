  sabnzbd:
    container_name: sabnzbd
    image: linuxserver/sabnzbd
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: ${_MEM_LIM}
        reservations:
          memory: ${_MEM_RES}
    ports:
      - 8080:8080
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=UTC
    volumes:
      - /media-rollout/appdata/sabnzbd:/config
      - /media-rollout/storage/downloads:/downloads

