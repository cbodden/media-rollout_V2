  sabnzbd:
    container_name: sabnzbd
    image: linuxserver/sabnzbd
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 8192M
        reservations:
          memory: 1024M
    ports:
      - 8080:8080
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=UTC
    volumes:
      - /media-rollout/appdata/sabnzbd:/config
      - /media-rollout/storage/downloads:/downloads

