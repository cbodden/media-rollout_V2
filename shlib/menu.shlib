function _menu()
{
    main
    _MENU_TYPE=${1}

    case "${_MENU_TYPE}" in
        'configure')
            _docker down
            rm ${_CFG_PATH}/${_YML_FILE}
            _api
            _docker_create darr
            _docker start
            exit 0
            ;;
        'update')
            _docker pull
            ;;
        'remove')
            _docker down
            rm -rf ${_CFG_PATH}/
            rm -rf /media_rollout/
            exit 0
            ;;
        'install')
            printf "%s\n" \
                "This option will install the media stack." \
                ""

            _pause
            _apt
            _docker_create darr
            ## _header_create
            ## _sabnzbd_create
            ## _nzbhydra2_create
            ## _radarr_create
            ## _lidarr_create
            ## _sonarr_create
            ## _lazylibrarian_create
            ## _ubooquity_create
            ## _plex_create
            ## _tautulli_create
            ## _network.service"
            _docker init
            _docker stop
            _api
            ## api gets removed when fnction creates get added
            _docker start
            exit 0
            ;;
    esac
}
