function _menu()
{
    main
    _MENU_TYPE=${1}

    case "${_MENU_TYPE}" in
        'configure')
            _docker down
            rm ${_CFG_PATH}/${_YML_FILE}
            _api
            _docker_create darr
            _docker start
            exit 0
            ;;
        'update')
            _docker pull
            ;;
        'remove')
            _docker down
            rm -rf ${_CFG_PATH}/
            rm -rf /media_rollout/
            exit 0
            ;;
        'install')
            printf "%s\n" \
                "This option will install the media stack." \
                ""

            _pause
            _apt
            _header service
            _sabnzbd service
            _nzbhydra2 service
            _radarr service
            _lidarr service
            _sonarr service
            _lazylibrarian service
            _ubooquity service
            _plex service
            _tautulli service
            _network service
            cat ${_DKR_PATH}/.env > ${_CFG_PATH}/.env
            _docker init
            _docker stop
            _sabnzbd api
            _nzbhydra2 api
            _radarr api
            _lidarr api
            _sonarr api
            _lazylibrarian api
            _docker start
            exit 0
            ;;
    esac
}
