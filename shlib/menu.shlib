function _menu()
{
    main
    _MENU_TYPE=${1}

    case "${_MENU_TYPE}" in
        'configure')
            _docker down
            rm -rf ${_API_DIR}
            rm -rf /media_rollout/
            _docker init
            _docker stop
            exit 0
            ;;
         'remove')
            _docker down
            rm -rf ${_API_DIR}
            rm -rf /media_rollout/
            exit 0
            ;;
        'install')
            printf "%s\n" \
                "This option will install the media stack." \
                "" \

            _pause
            _apt
            _docker init
            _docker stop
            _docker init
            _docker stop
            _api
            _docker start
            exit 0
            ;;
    esac
}
