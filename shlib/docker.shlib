function _docker()
{
    local _TAG=${1}

    case "${_TAG}" in
        down)
            docker-compose -f ${_CFG_PATH}/docker-compose.yml down
            ;;
        init)
            docker-compose -f ${_CFG_PATH}/docker-compose.yml up -d
            docker-compose -f ${_CFG_PATH}/docker-compose.yml stop
            ;;
        start)
            docker-compose -f ${_CFG_PATH}/docker-compose.yml up -d
            ;;
        stop)
            docker-compose -f ${_CFG_PATH}/docker-compose.yml stop
            ;;
        *)
            _usage >&2
            exit 1
            ;;
    esac
}
