function _menu()
{
    main
    _MENU_TYPE=${1}

    case "${_MENU_TYPE}" in
        'configure')
            _docker down
            rm ${_CFG_PATH}/${_YML_FILE}
            _sabnzbd_api
            _nzbhydra2_api
            _radarr_api
            _lidarr_api
            _sonarr_api
            _lazylibrarian_api
            _header_service
            _sabnzbd_service
            _nzbhydra2_service
            _radarr_service
            _lidarr_service
            _sonarr_service
            _lazylibrarian_service
            _ubooquity_service
            _plex_service
            _tautulli_service
            _network_service
            cat ${_DKR_PATH}/.env > ${_CFG_PATH}/.env
            _docker start
            exit 0
            ;;
        'update')
            _docker pull
            ;;
        'remove')
            _docker down
            rm -rf ${_CFG_PATH}/
            rm -rf /media_rollout/
            exit 0
            ;;
        'install')
            printf "%s\n" \
                "This option will install the media stack." \
                ""

            _pause
            _apt
            _header_service
            _sabnzbd_service
            _nzbhydra2_service
            _radarr_service
            _lidarr_service
            _sonarr_service
            _lazylibrarian_service
            _ubooquity_service
            _plex_service
            _tautulli_service
            _network_service
            cat ${_DKR_PATH}/.env > ${_CFG_PATH}/.env
            cat ${_DKR_PATH}/Dockerfile > ${_CFG_PATH}/Dockerfile
            _docker init
            _docker stop
            _sabnzbd_api
            _nzbhydra2_api
            _radarr_api
            _lidarr_api
            _sonarr_api
            _lazylibrarian_api
            _docker start
            exit 0
            ;;
    esac
}
